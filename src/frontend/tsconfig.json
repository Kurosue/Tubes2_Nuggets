{
	"include": [
		"next-env.d.ts",
		".next/types/**/*.ts",
		"**/*.ts",
		"**/*.tsx"
	],
	"exclude": [
		"node_modules/",
		".next/"
	],
	"compilerOptions": {
		"noEmit": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"allowJs": true,
		"skipLibCheck": true,
		"strict": false,
		"strictNullChecks": true,
		"strictBindCallApply": true,
		"strictFunctionTypes": true,
		"strictPropertyInitialization": true,
		"forceConsistentCasingInFileNames": true,
		"incremental": true,
		"isolatedModules": true,
		"moduleResolution": "node",
		"module": "ESNext",
		"target": "ESNext",
		"lib": [
			"ESNext",
			"DOM",
			"DOM.Iterable"
		],
		"jsx": "preserve",
		"rootDir": ".",
		"baseUrl": ".",
		"paths": {
			"@/*": [
				"./*"
			]
		},
		"plugins": [
			{
				"name": "next"
			}
		]
	}
}
